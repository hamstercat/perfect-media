<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <appSettings>
    <add key="TheTvDbUrl" value="http://thetvdb.com/" />
    <add key="TheTvDbApiKey" value="143FB1AC4767D6B9" />

    <add key="TheMovieDbUrl" value="https://api.themoviedb.org/" />
    <add key="TheMovieDbApiKey" value="e0e0382255074640e659dc3c8bd3013d" />

    <add key="ImdbUrl" value="http://www.imdb.com/" />

    <add key="VideoFileExtensions" value=".mkv,.wmv,.mov,.avi,.mp4" />
    <add key="KnownVideoCodecs" value="3iv2,avc1,div2,div3,divx,divx 4,dx50,flv,h264,microsoft,mp42,mp43,mp4v,mpeg1video,mpeg2video,mpg4,rv40,svq1,svq3,theora,vp6f,wmv2,wmv3,wvc1,xvid,fmp4" />
    <add key="KnownAudioCodecs" value="aac,ac3,cook,dca,dtshd_hra,dtshd_ma,eac3,mp1,mp2,mp3,pcm_s16be,pcm_s16le,pcm_u8,truehd,vorbis,wmapro,wmav2,flac" />
    <add key="MovieSetArtworkFolder" value="D:\Movies\_Artwork" />
  </appSettings>
  <log4net>
    <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
      <appendToFile value="true" />
      <maximumFileSize value="1024MB" />
      <maxSizeRollBackups value="2" />
      <rollingStyle value="Composite" />
      <datePattern value="yyyy-MM-dd'-perfect-media.log'" />
      <staticLogFileName value="false" />
      <file value="D:\Logs\"/>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%-5level] - %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="Information" />
      <appender-ref ref="LogFileAppender" />
    </root>
  </log4net>
</configuration>
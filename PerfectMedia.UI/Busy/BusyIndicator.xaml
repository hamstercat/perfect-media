<UserControl x:Class="PerfectMedia.UI.Busy.BusyIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Visibility="{Binding IsBusy, Converter={StaticResource VisibleIfTrueConverter}}">
        <Rectangle Fill="White" Opacity="0.5" Panel.ZIndex="1" />
        <metro:ProgressRing IsActive="{Binding IsBusy, Mode=OneWay}" Panel.ZIndex="2" />
    </Grid>
</UserControl>

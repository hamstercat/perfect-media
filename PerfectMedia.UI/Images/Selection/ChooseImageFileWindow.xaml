<Window x:Class="PerfectMedia.UI.Images.Selection.ChooseImageFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:img="clr-namespace:PerfectMedia.UI.Images"
        Title="Download Image" Height="100" Width="600"
        WindowStartupLocation="CenterOwner"
        img:IsClosedAttachedBehavior.IsClosedView="{Binding IsClosed}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="URL: " />
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}" x:Name="Url" />
        <Button Grid.Row="0" Grid.Column="2" Content="Browse" Click="BrowseClick" />
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Download" Command="{Binding DownloadCommand}" />
            <Button Content="Load Local File" Command="{Binding LoadFileCommand}" />
            <Button Content="Cancel" Click="CancelClick" />
        </StackPanel>
    </Grid>
</Window>

<UserControl x:Class="PerfectMedia.UI.Images.Selection.ImageSelectionItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:img="clr-namespace:PerfectMedia.UI.Images"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid MaxHeight="150">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <img:ImageLoader Grid.Row="0" ImageUri="{Binding Url}" InitialImage="/PerfectMedia.UI;component/Images/Blank.png" />
        <TextBlock Grid.Row="1" Text="{Binding Size}" />
        <TextBlock Grid.Row="2" Text="{Binding Description}" />
    </Grid>
</UserControl>

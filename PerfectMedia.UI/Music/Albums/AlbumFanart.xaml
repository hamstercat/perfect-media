<UserControl x:Class="PerfectMedia.UI.Music.Albums.AlbumFanart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:images="clr-namespace:PerfectMedia.UI.Images"
             xmlns:albums="clr-namespace:PerfectMedia.UI.Music.Albums"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type=albums:AlbumViewModel}">
    <Grid MinWidth="650">
        <!-- TODO: find ratio -->
        <images:SelectableImage DataContext="{Binding CoverArt}" WidthRatio="1920" HeightRatio="1080" />
    </Grid>
</UserControl>

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:img="clr-namespace:PerfectMedia.UI.Images">
    <Style TargetType="img:ImageLoader">
        <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality" />
        <Setter Property="RenderOptions.EdgeMode" Value="Aliased" />
        <Setter Property="Margin" Value="5" />
    </Style>
    <Style TargetType="Grid" x:Key="GridRow">
        <Setter Property="Margin" Value="0,0,0,5" />
    </Style>
    <Style TargetType="Grid" x:Key="GridRowRequiredBackground" BasedOn="{StaticResource GridRow}">
        <Setter Property="Background" Value="White" />
        <Setter Property="Opacity" Value="0.8" />
    </Style>
    <Style TargetType="Rectangle" x:Key="OverlayRectangle">
        <Setter Property="Fill" Value="White" />
        <Setter Property="Opacity" Value="0.7" />
    </Style>
</ResourceDictionary>
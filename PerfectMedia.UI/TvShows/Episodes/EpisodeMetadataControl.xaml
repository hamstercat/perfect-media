<UserControl x:Class="PerfectMedia.UI.TvShows.Episodes.EpisodeMetadataControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="White" Grid.IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" SharedSizeGroup="Labels" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" SharedSizeGroup="Labels" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" Text="{Binding Error}" Visibility="{Binding Error, Converter={StaticResource ShowIfNotEmptyConverter}}" Foreground="Red" />
        
        <Label Grid.Row="1" Grid.Column="0" Content="Title" />
        <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Title}" />
        <Label Grid.Row="2" Grid.Column="0" Content="Plot" />
        <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Plot}" TextWrapping="Wrap" />

        <Label Grid.Row="3" Grid.Column="0" Content="Season" />
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding SeasonNumber}" />
        <Label Grid.Row="4" Grid.Column="0" Content="Episode" />
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding EpisodeNumber}" />
        <Label Grid.Row="5" Grid.Column="0" Content="Rating" />
        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Rating}" />
        <Label Grid.Row="6" Grid.Column="0" Content="Aired Date" />
        <DatePicker Grid.Row="6" Grid.Column="1" SelectedDate="{Binding AiredDate}" />
        <Label Grid.Row="7" Grid.Column="0" Content="Credits" />
        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding Credits.String}" />
        <Label Grid.Row="8" Grid.Column="0" Content="Director" />
        <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding Director.String}" />
        <Label Grid.Row="9" Grid.Column="0" Content="Playcount" />
        <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding PlayCount}" />
        <Label Grid.Row="10" Grid.Column="0" Content="Last Played" />
        <DatePicker Grid.Row="10" Grid.Column="1" SelectedDate="{Binding LastPlayed}" />
        
        <Label Grid.Row="11" Grid.Column="0" Content="Display Season" Visibility="{Binding SeasonNumber, Converter={StaticResource SpecialsSeasonVisibilityConverter}}" />
        <TextBox Grid.Row="11" Grid.Column="1" Text="{Binding DisplaySeason}" Visibility="{Binding SeasonNumber, Converter={StaticResource SpecialsSeasonVisibilityConverter}}" />
        <Label Grid.Row="11" Grid.Column="2" Content="Display Episode" Visibility="{Binding SeasonNumber, Converter={StaticResource SpecialsSeasonVisibilityConverter}}" />
        <TextBox Grid.Row="11" Grid.Column="3" Text="{Binding DisplayEpisode}" Visibility="{Binding SeasonNumber, Converter={StaticResource SpecialsSeasonVisibilityConverter}}" />
        <!-- TODO: EpisodeBookmarks when multi-episode file is supported -->

        <Image Grid.Row="3" Grid.RowSpan="7" Grid.Column="2" Grid.ColumnSpan="2" MaxWidth="400" Source="{Binding ImagePath}" />
    </Grid>
</UserControl>

<UserControl x:Class="PerfectMedia.UI.TvShows.Shows.TvShowMetadataControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:shows="clr-namespace:PerfectMedia.UI.TvShows.Shows"
             xmlns:views="clr-namespace:PerfectMedia.UI"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Expander Grid.Row="0" Header="General Information" IsExpanded="True">
                <shows:TvGeneralInformation  />
            </Expander>
            <Expander Grid.Row="1" Header="Fanart">
                <shows:TvShowFanart DataContext="{Binding Images}" />
            </Expander>
            <Expander Grid.Row="2" Header="Actors">
                <views:Actors DataContext="{Binding Actors}" />
            </Expander>
        </Grid>
    </ScrollViewer>
</UserControl>
